<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modulos"
    android:background="@drawable/skys">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="200sp"
        android:layout_height="150sp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout">

        <Button
            android:id="@+id/btn_estrat"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Ventas"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_entrenam"
            android:layout_width="match_parent"
            android:layout_height="50sp"

            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Entrenamiento"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Rancking"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Ranking"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_button_estrategia"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Estrategia"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="200sp"
        android:layout_height="150sp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_Statictics"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Mis datos"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cardAdvisor"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Asesores"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_moodle"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Escuela"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_button_planes"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/button_exit"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="7"
            android:shadowRadius="9"
            android:text="Planes"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/id_info"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_circle"
        android:text="Info"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_exit" />

    <Button
        android:id="@+id/id_exit2"
        android:layout_width="60sp"
        android:layout_height="50sp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/button_circle"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="7"
        android:shadowRadius="9"
        android:text="USER"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/id_exit"
        android:layout_width="60sp"
        android:layout_height="50sp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_circle"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="7"
        android:shadowRadius="9"
        android:text="EXIT"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hugh" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="7"
        android:shadowRadius="7"
        android:text="Noticias HughesNet"
        android:textColor="#FFF5F5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/NoticiasRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="441dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bordeprofile"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

</androidx.constraintlayout.widget.ConstraintLayout>